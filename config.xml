        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.0.0">


    <name>SubicTacular!</name>

    <description>
Subic Travel Guide
    </description>

    <author >
        Kenneth Canlas
    </author>
<preference name="splash-screen-duration" value="4000" />
<icon src="icons/ldpi.png" gap:platform="android" gap:density="ldpi" />
